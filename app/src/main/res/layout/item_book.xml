<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardElevation="4dp"
    app:cardCornerRadius="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/textViewBookTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?attr/textAppearanceHeadline6"
            tools:text="Book Title Example" />

        <TextView
            android:id="@+id/textViewBookAuthor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textAppearance="?attr/textAppearanceSubtitle1"
            tools:text="Author Name" />

        <TextView
            android:id="@+id/textViewBookCategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textAppearance="?attr/textAppearanceBody2"
            tools:text="Category: Fiction" />

        <TextView
            android:id="@+id/textViewBookDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textAppearance="?attr/textAppearanceCaption"
            android:maxLines="2"
            android:ellipsize="end"
            tools:text="This is a short description of the book, which might be quite long and therefore needs to be truncated..." />

        <!-- Optional: Add small buttons or icons here for quick edit/delete if desired -->
        <!-- For example, within a horizontal LinearLayout:
        <ImageButton android:id="@+id/buttonEditBookItem" ... />
        <ImageButton android:id="@+id/buttonDeleteBookItem" ... />
        -->

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>